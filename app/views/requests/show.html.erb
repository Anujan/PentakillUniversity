<%- model_class = Request -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @request.student_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mentor_id) %>:</strong></dt>
  <dd><%= @request.mentor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal_tier) %>:</strong></dt>
  <dd><%= @request.goal_tier %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal_division) %>:</strong></dt>
  <dd><%= @request.goal_division %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @request.price %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              requests_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_request_path(@request), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              request_path(@request),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
