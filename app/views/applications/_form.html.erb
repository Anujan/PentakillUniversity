<%= simple_form_for @application, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :student_id %>
  <%= f.input :mentor_id %>
  <%= f.input :message %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applications_path, :class => 'btn' %>
  </div>
<% end %>
